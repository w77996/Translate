<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginBottom="@dimen/x5"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_chat_right_head"
                android:layout_width="@dimen/x35"
                android:layout_height="@dimen/x35"
                android:layout_marginLeft="@dimen/x10"
                android:layout_alignParentRight="true"
                android:background="@drawable/chat_english_head"/>

            <LinearLayout
                android:layout_toLeftOf="@+id/img_chat_right_head"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:orientation="vertical"
                android:background="@drawable/talk_right"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x10"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    >

                        <TextView
                            android:id="@+id/tv_chat_send"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:text="fasfdasdf"
                            />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/chat_more"
                            android:layout_centerVertical="true"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/x10"
                    android:background="#686868"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginBottom="@dimen/x10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tv_chat_recv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="test"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5">
                            <ImageView
                                android:id="@+id/img_chat_play"
                                android:layout_width="@dimen/x18"
                                android:layout_height="@dimen/x18"
                                android:padding="@dimen/x2"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/item_voice1"
                                android:layout_centerVertical="true"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</LinearLayout>