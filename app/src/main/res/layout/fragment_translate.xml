<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/main_title"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x45"
        android:background="@color/main_title_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/main_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="@color/color_white"
                android:text="@string/tran_mathine"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/setting"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x5"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="center"
                android:background="@drawable/tran_search_bg"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
               >
                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="@dimen/x250"
                    android:src="@drawable/img_search_box"
                    android:layout_height="@dimen/x40" />
                <ImageView
                    android:id="@+id/img_start"
                    android:layout_width="@dimen/x50"
                    android:layout_toRightOf="@+id/img_search"
                    android:src="@drawable/img_start"
                    android:layout_height="@dimen/x40" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical|center_horizontal"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x15"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center|center_horizontal|center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/x70"
                    android:layout_marginBottom="@dimen/x5"
                    android:background="@drawable/main_photo">

                    <Button
                        android:id="@+id/btn_photo_tran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white_color_code"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_alignParentBottom="true"
                        android:textSize="15sp"
                        android:text="@string/photo_tran"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/x70"
                    android:layout_marginBottom="@dimen/x5"
                    android:background="@drawable/main_chat"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btn_chat_tran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/md_white_color_code"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/x8"
                            android:layout_marginBottom="@dimen/x5"
                            android:layout_alignParentBottom="true"
                            android:textSize="15sp"
                            android:text="@string/chat"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/x180"
                    android:layout_height="@dimen/x70"
                    android:layout_marginBottom="@dimen/x5"
                    android:background="@drawable/main_voice_chat">

                    <Button
                        android:id="@+id/btn_voice_tran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white_color_code"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_alignParentBottom="true"
                        android:textSize="15sp"
                        android:text="@string/voice_tran"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x10"
                android:layout_weight="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x220"
                    android:background="@drawable/main_dev_tran">

                    <Button
                        android:id="@+id/btn_dev_tran"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_white_color_code"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x8"
                        android:layout_marginBottom="@dimen/x5"
                        android:layout_alignParentBottom="true"
                        android:textSize="15sp"
                        android:text="@string/dev_tran"/>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>